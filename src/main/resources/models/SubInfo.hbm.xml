<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ent.SubInfo" schema="daotalk" table="abonent_info">
        <meta attribute="class-description">
            This class contains the service detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="foreign">
                <param name="property">subscriber</param>
            </generator>
        </id>
        <one-to-one name="subscriber" class="ent.Subscriber"
                    constrained="true"></one-to-one>
        <property name="firstName" column="first_name" type="string"/>
        <property name="secondName" column="second_name" type="string"/>
        <property name="login" column="login" type="string"/>
        <property name="password" column="password" type="string"/>
    </class>
</hibernate-mapping>